<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/list_shopping_list_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <TextView
        android:id="@+id/list_shopping_list_listName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShoppingList"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_shopping_list_listName"
        android:id="@+id/list_shopping_list_createdby"
        android:text="Created By"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_shopping_list_createdby"
        android:id="@+id/list_shopping_list_created_at"
        android:layout_alignParentEnd="true"
        android:text="18/11/2016"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_shopping_list_own_name"
        android:layout_toEndOf="@id/list_shopping_list_createdby"
        android:layout_below="@id/list_shopping_list_listName"
        android:layout_marginLeft="5dp"
        android:text="Nafil"/>




</RelativeLayout>